extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Search database:
        form(method='POST' action='/search')
          div.form-group
            label(for='searchquery') Searchquery
            input.form-control(type='text' id='searchquery' placeholder='Search...' name='searchquery')
          button.btn.btn-primary(type='submit') Search!

    div.results#results
        h2 #{result}

